[
    {
        "type": "gitclone",
        "name": "linux-embedded-patchs",
        "export": false,

        "git_url": "https://github.com/igorkll/linux-embedded-patchs",
        "git_checkout": "2.2"
    },
    {
        "type": "gitclone",
        "name": "custom-debian-initramfs-init",
